{
  "name": "dbm-pump-control",
  "version": "1.0.0",
  "description": "Sistema automatitzat per al control d'una bomba entre dos dipòsits mitjançant Node-RED i Raspberry Pi",
  "main": "flows.json",
  "scripts": {
    "start": "node-red flows.json",
    "dev": "node-red --verbose flows.json"
  },
  "dependencies": {
    "node-red": "^3.1.0",
    "node-red-dashboard": "^3.6.0",
    "node-red-node-pi-gpiod": "^0.5.0",
    "node-red-contrib-cron-plus": "^1.5.1",
    "node-red-node-email": "^2.0.0"
  },
  "keywords": [
    "node-red",
    "raspberry-pi",
    "automation",
    "pump-control",
    "mqtt",
    "victron"
  ],
  "author": "DBM Control System",
  "license": "MIT",
  "node-red": {
    "settings": {
      "flowFile": "flows.json",
      "userDir": "./",
      "functionGlobalContext": {}
    }
  }
}